@{
    ViewData["Title"] = "Super Admin Panel";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>@ViewData["Title"]</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-4 justify-content-center d-flex">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    Communities
                </div>
                <div class="card-body">
                    <div class="card-text d-inline">
                    </div>
                    <a asp-area="Super_admin" asp-controller="Communities" asp-action="Index"  class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-4 justify-content-center d-flex">
            <div class="card" style="width: 18rem;">
                <div class="card-header">
                    Users
                </div>
                <div class="card-body">
                    <div class="card-text d-inline">
                    </div>
                    <a asp-area="Super_Admin" asp-controller="Users" asp-action="ManageUsers" class="btn btn-primary">Manage</a>
                </div>
            </div>
        </div>
        
    </div>
</div>